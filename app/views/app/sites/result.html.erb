<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Info Pasien</h3>
      </div>
      <div class="panel-body">
        <p><strong>Nama Lengkap</strong> : <%= @patient.nama_lengkap %></p>
        <p><strong>Nomor Telepon</strong> : <%= @patient.no_telepon %></p>
        <p><strong>Jenis Pelayanan</strong> : <%= @patient.pelayanan %></p>
        <p><strong>Jenis Kelamin</strong> : <%= @patient.jenis_kelamin %></p>
        <p><strong>Tempat, Tanggal Lahir</strong> : <%= @patient.tempat_lahir %>, <%= @patient.tanggal_lahir %></p>
      </div>
    </div>

    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Riwayat Berobat Pasien</h3>
      </div>
      <div class="panel-body">
        <% @patient.histories.each do |history| %>
          <p><strong>Nomor Rekam Medis</strong> : <%= history.no_rekam_medis %></p>
          <p><strong>Nomor Urut</strong> : <%= history.no_urut %></p>
          <p><strong>Poli Tujuan</strong> : <%= history.poli_tujuan %></p>
          <p><strong>Dokter yang menangani</strong> : <%= history.doctor.nama %></p>
          <p><strong>Penyakit</strong> : <%= history.disease.nama_penyakit %></p>
          <p><strong>Keluhan</strong> : <%= history.disease.keluhan_utama %></p>
          <p><strong>Gejala</strong> : <%= history.disease.gejala_gejala %></p>
          <p><strong>Pemberian Obat</strong> : <%= history.medicine_recipe.namaobat %></p>
          <p><strong>Tanggal Kadaluarsa Obat</strong> : <%= history.medicine_recipe.tanggal_kadaluarsa %></p>
          <hr>
        <% end %>
        <% if @patient.histories.empty? %>
          <p>Info Kosong</p>
        <% end %>
      </div>
    </div>


  </div>
</div>
