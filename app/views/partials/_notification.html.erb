<% if notice %>
  <div class="alert alert-dismissible alert-info col-md-3 col-md-offset-9">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <p><%= notice %></p>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-dismissible alert-danger">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <p><%= alert %></p>
  <% end %>
</div>

